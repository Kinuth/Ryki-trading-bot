# =============================================================================
# RYKI TRADING BOT - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# BINANCE API (Required)
# -----------------------------------------------------------------------------
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=True

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://user:password@localhost:5432/ryki_trading

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# DJANGO SETTINGS
# -----------------------------------------------------------------------------
SECRET_KEY=generate-a-new-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# ECONOMIC CALENDAR APIs (Optional)
# -----------------------------------------------------------------------------
INVESTING_COM_API_KEY=your_investing_api_key
TRADING_ECONOMICS_API_KEY=your_trading_economics_api_key

# -----------------------------------------------------------------------------
# RISK MANAGEMENT SETTINGS
# -----------------------------------------------------------------------------
ACCOUNT_RISK_PCT=0.015
MAX_SLIPPAGE_PCT=0.002
TRAILING_TRIGGER_PCT=0.02
DAILY_DRAWDOWN_LIMIT=0.05

# -----------------------------------------------------------------------------
# TRADING CONFIGURATION
# -----------------------------------------------------------------------------
TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT,XRPUSDT,SOLUSDT
